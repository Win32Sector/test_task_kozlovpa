{
    "server": {
      "host": "0.0.0.0",
      "port": 8084,
      "limit": {
        "header": {
          "read_timeout": 30,
          "max_size": 1024
        },
        "body": {
          "read_timeout": 10,
          "write_timeout": 1000
        },
        "process": {
          "idle_timeout": 30000
        }
      }
    },
    "pid": "/var/run/tcg/tcg.pid",
    "mysql": {
      "host": "{{ hostvars['db'].ansible_host }}",
      "port": 3306,
      {% for user in mysql_users %}
"user": "{{ user.name }}",
      {% endfor %}      
      {% for user in mysql_users %}
"pass": "{{ user.password }}",
      {% endfor %} 
      "database": "tcg_db",
      "max_lifetime": 60
    },
    "spin": {
      "email": "tcg@example.com",
      "password": "",
      "shingles": 3,
      "percent": 30
    },
    "log": {
      "level": "info",
      "stdout": false,
      "path": "/var/log/tcg",
      "size": -1,
      "ttl": 241920
    },
    "cache": {
      "path": "/var/lib/tcg/cache"
    },
    "datadog": {
      "host": "127.0.0.1",
      "port": 8125,
      "name": "tcg"
    },
    "sentence": {
      "min": 4,
      "max": 20
    },
    "queue": {
      "tag": 1,
      "post": 1,
      "phrase": 1
    }
  }